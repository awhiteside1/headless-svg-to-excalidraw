{
  "compilerOptions": {
    "sourceMap": true,
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "downlevelIteration": true,
    "allowJs": true,
    "noEmit": true,
    "strict": true,
    "esModuleInterop": true,
    "baseUrl": ".",
    "paths": {},
    "isolatedDeclarations": true,
    "skipLibCheck": true
  },
  "include": ["src",  "tsdown.config.ts"],
  "exclude": ["src/test"]
}
